@using EduHomee.ViewModels.Admin
@using EduHomee.Models
@model Slider

<div class="container mt-5">
    <div class="img">
      
    </div>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
        <div style="display:flex;justify-content:space-between">

            <div class="form-group">
                <label asp-for="@Model.Title" style="font-size:24px"></label>
                <input class="form-control" style="width:300px" asp-for="@Model.Title">
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Photo"></label>
                <input class="form-control" style="width:300px" asp-for="Photo">
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>


            <div class="form-group">
                <label asp-for="@Model.Description" style="font-size:24px"></label>
                <input class="form-control" style="width:300px" asp-for="@Model.Description">
                <span class="text-danger"></span>
            </div>
        </div>
        
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>


