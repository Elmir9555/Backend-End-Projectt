@using EduHomee.Models
@model Blog

<div class="container mt-5">
    <div class="img">

    </div>
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
        <div style="display:flex;justify-content:space-between">

            <div class="form-group">
                <label asp-for="@Model.Photo"></label>
                <input class="form-control" style="width:300px" asp-for="@Model.Photo">
                <span class="text-danger" asp-validation-for="@Model.Photo"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" style="font-size:24px"></label>
                <input class="form-control" style="width:300px" asp-for="Description">
                <span class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="TeacherName" style="font-size:24px"></label>
                <input class="form-control" style="width:300px" asp-for="TeacherName">
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" style="font-size:24px"></label>
                <input class="form-control" style="width:300px" asp-for="Date">
                <span class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>


