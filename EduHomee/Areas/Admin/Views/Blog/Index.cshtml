
@using EduHomee.Models
@model List<Blog>
@{
    int count = 1;
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>Blog</h3>
            <div>
                <a class="btn btn-success" asp-action="Create">Create</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            TeacherName
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @blog.TeacherName
                        </td>
                        <td>
                            @blog.Image
                        </td>
                        <td>
                            @blog.Description
                        </td>
                        <td>
                            @blog.Date
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@blog.Id">
                                <i class="mdi mdi-account-box-outline"></i>
                            </a>
                            <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@blog.Id">
                                <i class="mdi mdi-table-edit"></i>
                            </a>
                            <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@blog.Id">
                                <button class="btn btn-danger btn-sm" type="submit">
                                    <i class="mdi mdi-delete-forever"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>