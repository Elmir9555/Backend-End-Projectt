@using EduHomee.Models
@model CourseDetails

<form class="form-control">

    <div class="mb-3">
        <label class="form-label" style="font-size:34px;">CourseName</label>
        <div style="width:100%;height:40px;border:1px dashed grey;padding-top:10px;padding-left:20px;">
            @Model.Course.Title
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" style="font-size:34px;">Certificate</label>
        <div style="width:100%;height:40px;border:1px dashed grey;padding-top:10px;padding-left:20px;">
            @Model.Certificate
        </div>
    </div>
    <div class="mt-3">
        <label class="form-label" style="font-size:34px;">About</label>

        <div class="mt-1" style="width:100%;height:40px;border:1px dashed grey;padding-top:10px;padding-left:20px;">
            @Model.About
        </div>
    </div>
    <div class="mt-3">
        <label class="form-label" style="font-size:34px;">How to Apply</label>

        <div class="mt-1" style="width:100%;height:40px;border:1px dashed grey;padding-top:10px;padding-left:20px;">
            @Model.HowToApply
        </div>
    </div>
    <div class="mt-3">
        <label class="form-label" style="font-size:34px;">CourseCount</label>

        <div class="mt-1" style="width:100%;height:40px;border:1px dashed grey;padding-top:10px;padding-left:20px;">
            @Model.CourseCount
        </div>
    </div>
    <a asp-action="Index" class="btn btn-primary mt-3">Go back</a>
</form>




















