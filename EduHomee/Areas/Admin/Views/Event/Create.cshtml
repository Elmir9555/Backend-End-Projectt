@using EduHomee.Models
@model EventVM



<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div style="display:flex;justify-content:space-between">
            <div class="form-group">
                <label asp-for="Photos"></label>
                <input class="form-control" style="width:300px" asp-for="Photos">
                <span class="text-danger" asp-validation-for="Photos"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" style="width:300px" asp-for="Title">
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Desc"></label>
                <input class="form-control" style="width:300px" asp-for="Desc">
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location"></label>
                <input class="form-control" style="width:300px" asp-for="Location">
                <span class="text-danger"></span>
            </div>



        </div>



        <div style="display:flex;justify-content:space-between">

            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input class="form-control" style="width:300px" asp-for="StartDate">
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input class="form-control" style="width:300px" asp-for="EndDate">
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date"></label>
                <input class="form-control" style="width:300px" asp-for="Date">
                <span class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

