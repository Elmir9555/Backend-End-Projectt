

@using EduHomee.Models
@model List<Teacher>
@{
    int count = 1;
    Layout = "_AdminLayout";
}

<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>Teacher</h3>
            <div>
                <a class="btn btn-success" asp-action="Create">Create</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            FullName
                        </th>
                        <th>
                            Degree
                        </th>
                        <th>
                            AboutMe
                        </th>
                        <th>
                            Experience
                        </th>
                        <th>
                            Faculty
                        </th>
                        <th>
                            Mail
                        </th>
                        <th>
                            Hobbies
                        </th>
                        <th>
                            MakeACall
                        </th>
                        <th>
                            Skype
                        </th>
                        <th>
                           Work
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teach in Model)
                    {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @teach.Fullname
                        </td>
                        <td>
                            @teach.Degree
                        </td>
                        <td>
                            @teach.AboutMe
                        </td>
                        <td>
                            @teach.Experience
                        </td>
                        <td>
                            @teach.Faculty
                        </td>
                        <td>
                            @teach.Mail
                        </td>
                        <td>
                            @teach.Hobbies
                        </td>
                        <td>
                            @teach.MakeACall
                        </td>
                        <td>
                            @teach.Skype
                        </td>
                        <td>
                            @teach.Work
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@teach.Id">
                                <i class="mdi mdi-account-box-outline"></i>
                            </a>
                            <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@teach.Id">
                                <i class="mdi mdi-table-edit"></i>
                            </a>
                            <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@teach.Id">
                                <button class="btn btn-danger btn-sm" type="submit">
                                    <i class="mdi mdi-delete-forever"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>